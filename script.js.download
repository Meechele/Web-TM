    //Exercise 5
    // 1. Create a function, save(), which logs out the count when it's called
function save() {
    let them = count + " ~ "
    if (count < 1) {
        pre.textContent += ""
    }else{
        pre.textContent += them
        count = 0
        display.textContent = 0
    }
}

